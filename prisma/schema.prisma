generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  phoneNumber String @unique
  cpf String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admin {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Decimal @db.Decimal(10,2)
  image String
  description String
  active Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
